ELECTRICITY_BILL.PHP
<?php
if ($_SERVER["REQUEST_METHOD"] == "POST") {
    $consumer_number = $_POST['consumer_number'];
    $customer_name = $_POST['customer_name'];
    $previous_reading = $_POST['previous_reading'];
    $present_reading = $_POST['present_reading'];
    
    if (is_numeric($previous_reading) && is_numeric($present_reading)) {
        $units_consumed = $present_reading - $previous_reading;
        
        if ($units_consumed < 0) {
            echo "Error: Present reading should be greater than or equal to the previous reading.";
        } else {
            $bill_amount = 0;
            
            if ($units_consumed <= 100) {
                $bill_amount = $units_consumed * 3;
            } elseif ($units_consumed <= 200) {
                $bill_amount = (100 * 3) + (($units_consumed - 100) * 4);
            } elseif ($units_consumed <= 300) {
                $bill_amount = (100 * 3) + (100 * 4) + (($units_consumed - 200) * 5);
            } else {
                $bill_amount = (100 * 3) + (100 * 4) + (100 * 5) + (($units_consumed - 300) * 6);
            }
            
            echo "<!DOCTYPE html>
            <html lang='en'>
            <head>
                <meta charset='UTF-8'>
                <title>Electricity Bill</title>
                <style>
                    body {
                        font-family: Arial, sans-serif;
                        background-color: #f4f4f9;
                        margin: 0;
                        padding: 20px;
                    }
                    .container {
                        background-color: #27e7b0;
                        width: 500px;
                        margin: 0 auto;
                        padding: 20px;
                        border-radius: 8px;
                        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
                    }
                    .container h2 {
                        text-align: center;
                        color:  #cfa26b;
                    }
                    table {
                        width: 100%;
                        border-collapse: collapse;
                        margin-top: 20px;
                    }
                    table, th, td {
                        border: 1px solid #ddd;
                    }
                    th, td {
                        padding: 8px;
                        text-align: left;
                    }
                    th {
                        background-color: #e79f0f;
                        color: #00ffea;
                    }
                </style>
            </head>
            <body>
                <div class='container'>
                    <h2>ELECTRICITY BILL</h2>
                    <table>
                        <tr>
                            <th>Consumer Number</th>
                            <td>$consumer_number</td>
                        </tr>
                        <tr>
                            <th>Customer Name</th>
                            <td>$customer_name</td>
                        </tr>
                        <tr>
                            <th>Previous Reading</th>
                            <td>$previous_reading</td>
                        </tr>
                        <tr>
                            <th>Present Reading</th>
                            <td>$present_reading</td>
                        </tr>
                        <tr>
                            <th>Unit Consumed</th>
                            <td>$units_consumed</td>
                        </tr>
                        <tr>
                            <th>Amount</th>
                            <td>$bill_amount</td>
                        </tr>
                    </table>
                </div>
            </body>
            </html>";
        }
    } else {
        echo "Please enter valid numeric readings.";
    }
} else {
    echo "Invalid request method.";
}
?>









